<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_win"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EE9D31"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                app:srcCompat="@drawable/splash_sam_main" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="101dp"
                    android:layout_height="90dp"
                    app:srcCompat="@drawable/winflag_f" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:alpha="0.8"
                android:fontFamily="@font/earlygameboy"
                android:paddingLeft="15dp"
                android:text="PLAYER NAME"
                android:textAlignment="center"
                android:textColor="#5A392B"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:alpha="0.8"
                android:fontFamily="@font/earlygameboy"
                android:paddingLeft="15dp"
                android:text="WIN!"
                android:textAlignment="center"
                android:textColor="#5A392B"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/earlygameboy"
                android:paddingLeft="15dp"
                android:text="GAME"
                android:textAlignment="center"
                android:textColor="#5A392B"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:fontFamily="@font/earlygameboy"
                android:paddingLeft="15dp"
                android:text="OVER"
                android:textAlignment="center"
                android:textColor="#5A392B"
                android:textSize="40sp" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnNuevoJuego"

                style="?android:attr/borderlessButtonStyle"
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:background="@drawable/boton1"
                android:fontFamily="@font/earlygameboy"
                android:onClick="NuevoJuego"
                android:text="JUGAR"
                android:textColor="#5A392B" />
            <Button
                android:id="@+id/btnSalir"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="133dp"
                android:layout_height="wrap_content"

                android:background="@drawable/boton1"
                android:fontFamily="@font/earlygameboy"
                android:onClick="Salir"
                android:text="Salir"
                android:textColor="#5A392B" />

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>